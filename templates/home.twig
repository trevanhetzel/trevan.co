{% for post in posts %}
  <section class="article">
    <time class="article-time" datetime="2015-05-16">
      <span class="day">
        {% if post.day %}
          {{ post.day }}
        {% else %}
          {{ post.post_date|date('j') }}
        {% endif %}
      </span>

      <span class="month">
        {% if post.month %}
          {{ post.month }}
        {% else %}
          {{ post.post_date|date('M') }}
        {% endif %}
      </span>
    </time>

    <div class="article-content">
      <p class="article-info">
        Posted on <strong>{{ post.date }}</strong> in 
        
        {% for cat in post.categories %}
          <strong class="article-info__cat">{{ cat }}</strong>
        {% endfor %}
      </p>

      <h1><a href="{{ post.slug }}">{{ post.title }}</a></h1>

      <div class="article-excerpt">
        {% if post.excerpt %}
          <p>{{ post.excerpt }}</p>
        {% else %}
          <p>{{ post.content|apply_filters('wp_trim_excerpt') }}</p>
        {% endif %}
      </div>

      <a href="{{ post.slug }}" class="btn">Continue Reading</a>
    </div>
  </section>
{% else %}
  <li>Sorry, no posts matched your criteria</li>
{% endfor %}

<nav class="pagination" role="pagination">
  {% if pagination.prev %}
    <a class="newer-posts" href="{{ pagination.prev.link }}">← Newer Posts</a>
  {% endif %}

  {% for page in pagination.pages %}
    <span class="page-number">Page {{ pagination.total }} of {{ loop.length }}</span>
  {% endfor %}
  
  {% if pagination.next %}
    <a class="older-posts" href="{{ pagination.next.link }}">Older Posts →</a>
  {% endif %}
</nav>
